<form id="theForm">
    <div class="d-flex justify-content-center">
        <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
            <input type="radio" class="btn-check" name="check_out" id="check_out" autocomplete="off"/>
            <label class="btn btn-outline-primary" for="check_out">Check Out</label>
            
            <input type="radio" class="btn-check" name="check_in" id="check_in" autocomplete="off"/>
            <label class="btn btn-outline-primary" for="check_in">Check In</label>
        </div>
    </div>
</form>
<script>
    function isValid() {
        const checkOut = document.getElementById('check_out').checked;
        const checkIn = document.getElementById('check_in').checked;
        return checkOut || checkIn;
    }
</script>
