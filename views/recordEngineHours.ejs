<h1>Engine Hours</h1>
<form id="theForm">
<div class="bp3-form-group">
    <label class="bp3-label" for="hours">
        Hours
    </label>
    <div class="bp3-input-group">
        <select id="hours" class="bp3-input" required>
            <option value="" disabled selected>Select hours</option>
            <% for (let hour = 0; hour < 24; hour++) { %>
                <option value="<%= hour %>"><%= hour %></option>
            <% } %>
        </select>
    </div>
</div>
<div class="bp3-form-group">
    <label class="bp3-label" for="minutes">
        Minutes
    </label>
    <div class="bp3-input-group">
        <select id="minutes" class="bp3-input" required>
            <option value="" disabled selected>Select minutes</option>
            <% for (let i = 0; i < 6; i++) { %>
                <option value="<%= i * 10 %>"><%= i * 10 %></option>
            <% } %>
        </select>
    </div>
</div>


</form>
<script>
    function isValid() {
// returns true if both hours and minutes are filled in
        const hours = document.getElementById('hours').value;
        const minutes = document.getElementById('minutes').value;
        return hours !== '' && minutes !== '';
    }
</script>
