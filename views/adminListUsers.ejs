<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<div class="container mt-5">
<table class="table table-striped table-bordered align-middle mt-4">
    <thead class="table-dark">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach(function(user, index) { %>
            <tr>
                <td><%= user.firstName %></td>
                <td><%= user.lastName %></td>
                <td><%= user.email_address %></td>
                <td>
                    <form action="/admin/set-password" method="get" class="d-inline">
                        <input type="hidden" name="email_address" value="<%= user.email_address %>">
                        <button type="submit" class="btn btn-sm btn-primary">Set Password</button>
                    </form>
                    <% if (users.length > 1) { %>
                        <form action="/admin/delete-user" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this user?');">
                            <input type="hidden" name="email_address" value="<%= user.email_address %>">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    <% } %>
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>
<a href="/admin/add-admin-user" class="btn btn-success mt-3">Add User</a>

</div>