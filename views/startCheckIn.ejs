<h1>Start Check-In -- choose a boat</h1>
<form id="theForm">
    <div class="d-flex justify-content-center">
        <div class="btn-group" role="group" aria-label="Basic radio toggle button group">        
        <% if (locals.boats && locals.boats.length > 0) { %>
            <% locals.boats.forEach(function(boat) { %>
            <div style="padding: 10px;">
                <input type="radio" id="<%= boat.id %>" name="boat" value="<%= boat.id %>" class="btn-check" />
                <label class="btn btn-outline-primary" for="<%= boat.id %>"><%= boat.name %></label>
            </div>
            <% }); %>
        <% } else { %>
            <p>Sorry, no boats currently checked out.</p>
        <% } %>
        </div>
    </div>
</form>
<script>
    function isValid() {
        return true
    }
</script>