<form id="theForm" class="needs-validation" novalidate>
    <div class="alert alert-info mb-3" role="alert">
        Please complete the details below to identify yourself
    </div>
    <div class="mb-3">
        <label for="familyInitial" class="form-label">First letter of family name:</label>
        <input type="text" class="form-control text-uppercase border-primary" id="familyInitial" name="familyInitial" maxlength="1" pattern="[A-Za-z]" required style="width: 60px; display: inline-block;">
        <div class="invalid-feedback">
            Please enter a single letter.
        </div>
    </div>
    <div class="row g-3 align-items-end mb-3">
        <div class="col-md-4">
            <label for="monthSelect" class="form-label">Month of birth:</label>
            <div class="input-group">
            <select name="month" id="monthSelect" class="form-select border-primary" required>
                <option value="">Month</option>
                <% [
                'January', 'February', 'March', 'April', 'May', 'June',
                'July', 'August', 'September', 'October', 'November', 'December'
                ].forEach(function(month, idx) { %>
                <option value="<%= idx + 1 %>"><%= month %></option>
                <% }); %>
            </select>
            </div>
            <div class="invalid-feedback">
            Please select a month.
            </div>
        </div>
        <div class="col-md-4">
            <label for="daySelect" class="form-label">Day of month:</label>
            <div class="input-group">
            <select name="day" id="daySelect" class="form-select border-primary" required>
                <option value="">Day</option>
                <% for (var d = 1; d <= 31; d++) { %>
                <option value="<%= d %>"><%= d %></option>
                <% } %>
            </select>
            </div>
            <div class="invalid-feedback">
            Please select a day.
            </div>
        </div>
    </div>
</form>
<script>
    function isValid() {
        return true
    }
</script>